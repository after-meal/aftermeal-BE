{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@config(.*)$": "<rootDir>/../src/config$1",
    "^@common(.*)$": "<rootDir>/../src/common$1"
  },
  "testTimeout": 30000
}
